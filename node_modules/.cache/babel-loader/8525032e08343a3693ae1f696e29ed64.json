{"ast":null,"code":"import { ref, watch } from \"vue\";\nimport { useStore } from 'vuex';\nexport default {\n  __name: 'RegisterView',\n  setup(__props, {\n    expose\n  }) {\n    expose();\n    const store = useStore();\n\n    // import { useRouter, useRoute } from 'vue-router'\n\n    // const router = useRouter()\n    // const route = useRoute()\n    const userName = ref(\"\");\n    const userEmail = ref(\"\");\n    const userPass = ref(\"\");\n    const passWarnSpan = ref(\"\");\n    const emailWarnSpan = ref(\"\");\n    const btnSubmitActive = ref(false);\n    const registerUser = () => {\n      if (store.state.usersRegistered.map(user => user.email).includes(userEmail.value)) {\n        this.$refs.userEmail.focus();\n        emailWarnSpan.value = \"Ya existe un usuario registrado con ese email\";\n      } else {\n        let lastUserId;\n        if (store.getters.countUsers > 0) {\n          lastUserId = store.state.usersRegistered.map(user => user.id).sort((a, b) => b - a).slice(0, 1);\n        } else lastUserId = 0;\n        let newId = lastUserId + 1;\n        let newUser = {\n          id: newId,\n          email: userEmail.value,\n          password: userPass.value,\n          name: userName.value\n        };\n        userEmail.value = \"\";\n        userPass.value = \"\";\n        userName.value = \"\";\n        store.dispatch(\"loadUserToDb\", newUser);\n        console.log(store.state.usersRegistered);\n        alert(\"Te has registrado con éxito!\");\n      }\n    };\n    watch([userName, userEmail, userPass], ([newUserName, newUserEmail, newUserPass]) => {\n      passWarnSpan.value = newUserPass.length > 0 && newUserPass.length < 4 ? \"La contraseña debe contener mínimamente 4 caracteres\" : \"\";\n      emailWarnSpan.value = newUserEmail.length > 0 && !newUserEmail.includes('@') ? \"El email debe ser una dirección válida\" : \"\";\n      if (newUserName.length > 1 && newUserPass.length >= 4 && newUserEmail.length > 4 && newUserEmail.includes('@')) {\n        btnSubmitActive.value = true;\n      } else btnSubmitActive.value = false;\n    });\n    const __returned__ = {\n      store,\n      userName,\n      userEmail,\n      userPass,\n      passWarnSpan,\n      emailWarnSpan,\n      btnSubmitActive,\n      registerUser,\n      ref,\n      watch,\n      useStore\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"mappings":"AACA,SAAQA,GAAG,EAAEC,KAAK,QAAO,KAAK;AAC9B,SAASC,QAAQ,QAAQ,MAAM;;;;;;;IAE/B,MAAMC,KAAK,GAAGD,QAAQ,EAAE;;IAGxB;;IAEA;IACA;IACA,MAAME,QAAQ,GAACJ,GAAG,CAAC,EAAE,CAAC;IACtB,MAAMK,SAAS,GAACL,GAAG,CAAC,EAAE,CAAC;IACvB,MAAMM,QAAQ,GAACN,GAAG,CAAC,EAAE,CAAC;IACtB,MAAMO,YAAY,GAACP,GAAG,CAAC,EAAE,CAAC;IAC1B,MAAMQ,aAAa,GAACR,GAAG,CAAC,EAAE,CAAC;IAC3B,MAAMS,eAAe,GAACT,GAAG,CAAC,KAAK,CAAC;IAGhC,MAAMU,YAAY,GAAC,MAAI;MAErB,IAAIP,KAAK,CAACQ,KAAK,CAACC,eAAe,CAACC,GAAG,CAACC,IAAI,IAAGA,IAAI,CAACC,KAAK,CAAC,CAACC,QAAQ,CAACX,SAAS,CAACY,KAAK,CAAC,EAAC;QAC/E,IAAI,CAACC,KAAK,CAACb,SAAS,CAACc,KAAK,EAAE;QAC5BX,aAAa,CAACS,KAAK,GAAC,+CAA+C;MACrE,CAAC,MAAK;QACJ,IAAIG,UAAU;QACd,IAAIjB,KAAK,CAACkB,OAAO,CAACC,UAAU,GAAC,CAAC,EAAC;UAC7BF,UAAU,GAAIjB,KAAK,CAACQ,KAAK,CAACC,eAAe,CAACC,GAAG,CAACC,IAAI,IAAGA,IAAI,CAACS,EAAE,CAAC,CAACC,IAAI,CAAC,CAACC,CAAC,EAAEC,CAAC,KAAKA,CAAC,GAAGD,CAAC,CAAE,CAACE,KAAK,CAAC,CAAC,EAAE,CAAC,CAAC;QAClG,CAAC,MAAMP,UAAU,GAAC,CAAC;QACnB,IAAIQ,KAAK,GAACR,UAAU,GAAC,CAAC;QACtB,IAAIS,OAAO,GAAC;UACVN,EAAE,EAAEK,KAAK;UACTb,KAAK,EAAEV,SAAS,CAACY,KAAK;UACtBa,QAAQ,EAAExB,QAAQ,CAACW,KAAK;UACxBc,IAAI,EAAE3B,QAAQ,CAACa;QACjB,CAAC;QACDZ,SAAS,CAACY,KAAK,GAAC,EAAE;QAClBX,QAAQ,CAACW,KAAK,GAAC,EAAE;QACjBb,QAAQ,CAACa,KAAK,GAAC,EAAE;QACjBd,KAAK,CAAC6B,QAAQ,CAAC,cAAc,EAAEH,OAAO,CAAC;QACvCI,OAAO,CAACC,GAAG,CAAC/B,KAAK,CAACQ,KAAK,CAACC,eAAe,CAAC;QACxCuB,KAAK,CAAC,8BAA8B,CAAC;MACvC;IAEF,CAAC;IAEDlC,KAAK,CAAC,CAACG,QAAQ,EAAEC,SAAS,EAACC,QAAQ,CAAC,EAAE,CAAC,CAAC8B,WAAW,EAAEC,YAAY,EAAEC,WAAW,CAAC,KAAK;MAClF/B,YAAY,CAACU,KAAK,GAAEqB,WAAW,CAACC,MAAM,GAAC,CAAC,IAAID,WAAW,CAACC,MAAM,GAAC,CAAC,GAAG,sDAAsD,GAAG,EAAE;MAC9H/B,aAAa,CAACS,KAAK,GAAEoB,YAAY,CAACE,MAAM,GAAC,CAAC,IAAI,CAACF,YAAY,CAACrB,QAAQ,CAAC,GAAG,CAAC,GAAI,wCAAwC,GAAG,EAAE;MAE1H,IAAIoB,WAAW,CAACG,MAAM,GAAC,CAAC,IAAID,WAAW,CAACC,MAAM,IAAE,CAAC,IAAIF,YAAY,CAACE,MAAM,GAAC,CAAC,IAAIF,YAAY,CAACrB,QAAQ,CAAC,GAAG,CAAC,EAAC;QACvGP,eAAe,CAACQ,KAAK,GAAC,IAAI;MAC5B,CAAC,MAAMR,eAAe,CAACQ,KAAK,GAAC,KAAK;IACpC,CAAC,CAAC","names":["ref","watch","useStore","store","userName","userEmail","userPass","passWarnSpan","emailWarnSpan","btnSubmitActive","registerUser","state","usersRegistered","map","user","email","includes","value","$refs","focus","lastUserId","getters","countUsers","id","sort","a","b","slice","newId","newUser","password","name","dispatch","console","log","alert","newUserName","newUserEmail","newUserPass","length"],"sources":["C:/Users/User01/Documents/ITAcademy/Vue/sprint8/starwars/src/views/RegisterView.vue"],"sourcesContent":["<script setup>\nimport {ref, watch} from \"vue\";\nimport { useStore } from 'vuex'\n\nconst store = useStore()\n\n\n// import { useRouter, useRoute } from 'vue-router'\n\n// const router = useRouter()\n// const route = useRoute()\nconst userName=ref(\"\");\nconst userEmail=ref(\"\");\nconst userPass=ref(\"\");\nconst passWarnSpan=ref(\"\");\nconst emailWarnSpan=ref(\"\");\nconst btnSubmitActive=ref(false);\n\n\nconst registerUser=()=>{\n\n  if (store.state.usersRegistered.map(user=> user.email).includes(userEmail.value)){\n    this.$refs.userEmail.focus();\n    emailWarnSpan.value=\"Ya existe un usuario registrado con ese email\";\n  } else{\n    let lastUserId;\n    if (store.getters.countUsers>0){\n      lastUserId =  store.state.usersRegistered.map(user=> user.id).sort((a, b) => b - a ).slice(0, 1);\n    } else lastUserId=0;\n    let newId=lastUserId+1;\n    let newUser={\n      id: newId,\n      email: userEmail.value,\n      password: userPass.value,\n      name: userName.value,\n    }\n    userEmail.value=\"\";\n    userPass.value=\"\";\n    userName.value=\"\";\n    store.dispatch(\"loadUserToDb\", newUser)\n    console.log(store.state.usersRegistered)\n    alert(\"Te has registrado con éxito!\")\n  }\n  \n}\n\nwatch([userName, userEmail,userPass], ([newUserName, newUserEmail, newUserPass]) => {\n  passWarnSpan.value= newUserPass.length>0 && newUserPass.length<4 ? \"La contraseña debe contener mínimamente 4 caracteres\" : \"\";\n  emailWarnSpan.value= newUserEmail.length>0 && !newUserEmail.includes('@')  ? \"El email debe ser una dirección válida\" : \"\";\n  \n  if (newUserName.length>1 && newUserPass.length>=4 && newUserEmail.length>4 && newUserEmail.includes('@')){\n    btnSubmitActive.value=true;\n  } else btnSubmitActive.value=false;\n});\n\n</script>\n<template>\n  <div >\n    <h1>Registrarse</h1>\n    <div>Usuarios registrados: {{store.getters.countUsers}}</div>\n    <form @submit.prevent=\"registerUser()\">\n      <div class=\"form-container\">\n        <div class=\"form-row\">\n          <input type=\"text\" v-model.trim=\"userName\" placeholder=\"Nombre y Apellido\" >\n        </div>\n        <div class=\"form-row\">\n          <input type=\"email\" v-model.trim=\"userEmail\" placeholder=\"Email\" required>\n          <span v-if=\"emailWarnSpan!=''\">{{emailWarnSpan}}</span>\n        </div>\n        <div class=\"form-row\">\n          <input type=\"password\" v-model.trim=\"userPass\" placeholder=\"Password\" required>\n          <span v-if=\"passWarnSpan!=''\">{{passWarnSpan}}</span>\n        </div>\n        <div v-if=\"btnSubmitActive\" class=\"form-row\">\n          <button type=\"submit\">Registrarse!</button>\n        </div>\n      </div>\n    </form>\n  </div>\n</template>\n<style scoped>\n.form-container{\n  width: 50%;\n  margin: auto;\n}\ninput{\n  width: 100%;\n  margin: 0.5rem 0;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}